<Window x:Class="WpfApp1.EntityGridCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        

        
        Title="EntityGrid" Height="450" Width="1200">

	
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal"  DataContext="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
            <Button x:Name="btnRefresh" Content="Refresh" Click="btnRefresh_Click" />
            <Button x:Name="btnSave" Content="Save" Click="btnSave_Click" />

            <Button x:Name="btnTest" Content="Test" Click="btnTest_Click" />
            <Button x:Name="btnTest1" Content="Test1" Click="btnTest1_Click" />
            <Button x:Name="btnTest2" Content="Test2" Click="btnTest2_Click" />



    </StackPanel>

        <DataGrid  x:Name="grdGrid"  AutoGenerateColumns="True" 
                  >
            <DataGrid.Columns>


               <DataGridTextColumn Header="NickName" Binding="{Binding ExtProp.NickName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  />


                
            </DataGrid.Columns>
            
        </DataGrid>
        
    </StackPanel>
</Window>

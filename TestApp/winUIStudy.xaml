<Window x:Class="TestApp.winUIStudy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        mc:Ignorable="d"
         Title="UI Study" Height="750" Width="1800">
    <StackPanel Orientation="Vertical">

        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnSave" Content="Save" Click="btnSave_Click"></Button>
            <Button x:Name="btnTest1" Content="Test1" Click="btnTest1_Click" />
            <ComboBox x:Name="cboItemsSource"  SelectionChanged="cboItemsSource_SelectionChanged" >
                <ComboBoxItem>0</ComboBoxItem>
                <ComboBoxItem>1</ComboBoxItem>
                <ComboBoxItem>2</ComboBoxItem>
                <ComboBoxItem>3</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <TextBox x:Name="txtEdit" Text="{Binding SelectedItem.Freight, ElementName=grd1}" ></TextBox>
        <TextBox x:Name="txtEdit1" Text="{Binding firstOrder1, Mode=TwoWay}" ></TextBox>
        <DataGrid x:Name="grd1"   ></DataGrid>

    </StackPanel>
</Window>
